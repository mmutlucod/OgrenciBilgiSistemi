
<h4>Sınav Notları</h4>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Ders Kodu</th>
            <th>Ders Adı</th>
            <th>Sınav Notları</th>
            <th>Ortalama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.resultData)
        {
            <tr>
                <td>@item.DersKodu</td>
                <td>@item.DersAdi</td>
                <td>

                    @(item.SinavTuruAdi1 != null ? $"{item.SinavTuruAdi1}: {item.VizeNotu}" : "")
                    @(item.SinavTuruAdi2 != null ? $"{item.SinavTuruAdi2}: {item.FinalNotu}" : "")
                    @(item.SinavTuruAdi3 != null ? $"{item.SinavTuruAdi3}: {item.ButunlemeNotu}" : "")
                    @(item.SinavTuruAdi4 != null ? $"{item.SinavTuruAdi4}: {item.TekDersNotu}" : "")
                    
                </td>
                <td>
                    @if(item.SinavTuruAdi1 != null && item.SinavTuruAdi2 != null && item.SinavTuruAdi3 == null)
                    {
                        var ortalama = (item.VizeNotu * (item.VizeEtkiOrani/100) ) + (item.FinalNotu * (item.FinalEtkiOrani/100) );
                        <p>@ortalama.ToString("0.00")</p>
                    }
                    @if (item.SinavTuruAdi1 != null && item.SinavTuruAdi2 != null && item.SinavTuruAdi3 != null)
                    {
                        var ortalama = (item.VizeNotu * (item.VizeEtkiOrani / 100)) + (item.ButunlemeNotu * (item.ButunlemeEtkiOrani / 100));
                        <p>@ortalama.ToString("0.00")</p>
                    }
                    @if (item.SinavTuruAdi1 != null && item.SinavTuruAdi2 != null && item.SinavTuruAdi3 != null && item.SinavTuruAdi4 != null)
                    {
                        var ortalama = (item.TekDersNotu * (item.TekDersSinaviEtkiOrani / 100));
                        <p>@ortalama.ToString("0.00")</p>
                    }
                    @if(item.SinavTuruAdi2 == null)
                    {
                        <p>--</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>