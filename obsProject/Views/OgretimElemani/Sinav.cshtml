@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h4>Sınav Listesi</h4>
<div class="alert alert-success" role="alert">
    Değerlendirme işlemleri Not Giriş ekranından seçilen derse göre yapılmaktadır.
</div>

<table class="table">
    <thead>
        <tr>
            <th>Dersin Kodu</th>
            <th>Dersin Adı</th>
            <th>Sınav Turu</th>
            <th>Etki Oranı</th>
            <th>Sınav Günü</th>
            <th>Sınav Saati</th>
            <th>Derslik Adı</th>
            <th>Gözetmen Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach (var item in ViewBag.Sinavlar)
        {
            <tr>
                <td>@item.DersKodu</td>
                <td>@item.DersAdi</td>
                <td>@item.SinavTuruAdi</td>
                <td>@item.EtkiOrani</td>
                <td>@item.SinavTarihi</td>
                <td>@item.SinavSaati</td>
                <td>@item.DerslikAdi</td>
                <td>@item.GozetmenAdi @item.GozetmenSoyadi</td>
                <td>
                    <a asp-controller="OgretimElemani" asp-action="Degerlendirme" asp-route-id="@item.SinavID" class="btn btn-warning">Not Giriş</a>
                    <a asp-controller="OgretimElemani" asp-action="SinavDuzenle" asp-route-id="@item.SinavID" class="btn btn-primary">Duzenle</a>
                    @* <form method="post" asp-controller="OgretimElemani" asp-action="SinavSil" asp-route-id="@item.SinavID">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form> *@
                </td>
            </tr>
        }
    </tbody>
